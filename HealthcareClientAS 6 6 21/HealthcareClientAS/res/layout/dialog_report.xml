<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >
    
	<TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulse Rate"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge" />


	<EditText
	    android:id="@+id/txtPulse"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:ems="10"
	    android:hint="Normal: 60-100"
	    android:inputType="number"
	    android:singleLine="true" >

        <requestFocus />
    </EditText>
       
    <TextView
        android:id="@+id/textView3"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Sugar"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/txtSugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Normal: 70-130"
        android:inputType="number|numberDecimal"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView4"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Pressure"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/txtPressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Normal: 60-130"
        android:inputType="number"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView5"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Body Temperature"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/txtTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Normal: 95-100Â°F"
        android:inputType="numberDecimal"
        android:singleLine="true" />

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
        <Button
	        android:id="@+id/button1"
        	android:layout_width="0dp"
        	android:layout_weight="1"
        	android:layout_height="wrap_content"
        	android:text="Cancel"
        	android:onClick="onCancel" />
        
        <Button
        	android:id="@+id/save"
        	android:layout_width="0dp"
        	android:layout_weight="1"
        	android:layout_height="wrap_content"
        	android:text="Send"
        	android:onClick="onReportSend" />
    
    </LinearLayout>
       
</LinearLayout>